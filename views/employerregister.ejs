<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employer Registration</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            background-color: #FF8300;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            width: 600px; /* Adjust the width as needed */
        }
    </style>
    <script >
        async function validateform(event) {
            var companyName = document.getElementById('companyname').value;
            var email = document.getElementById('email').value;
            var password = document.getElementById('password').value; // Corrected ID
            var employerId = document.getElementById('employerid').value;
            var aadharNo = document.getElementById('aadharno').value;
            var val=true;

            // Simple email validation
            var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                alert('Please enter a valid email address.');
                event.preventDefault();
                return false;
            }

            // Password validation (minimum 6 characters)
            if (password.length < 8) {
                alert('Password must be at least 8 characters long.');
                event.preventDefault();
                return false;
            }

            // Basic required field validation
            if (companyName.trim() === '' || email.trim() === '' || password.trim() === '' || employerId.trim() === '' || aadharNo.trim() === '') {
                alert('All fields are required.');
                event.preventDefault();
                return false;
            }

            // Aadhar number validation
            var aadharRegex = /^\d{12}$/;
            if (!aadharRegex.test(aadharNo)) {
                alert('Please enter a valid 12-digit Aadhar number.');
                event.preventDefault();
                return false;
            }
        }
    </script>
</head>
<body style="background-image: linear-gradient(-90deg, #ff5858 0%, #f09819 100%)">

    <div class="container mt-10">
        <h1 class="mb-4">Employer Registration</h1>
        
        <!-- Employer Registration Form -->
        <form  action="/employer/registeremployer" method="post" onsubmit="return validateform(event)" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="name" class="form-label">Username:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
                <label for="companyName" class="form-label">Company Name:</label>
                <input type="text" class="form-control" id="companyname" name="companyname" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input type="password" class="form-control" id="password" name="pass" required>
            </div>

            <!-- Additional Company Information (customize based on your needs) -->
            <div class="mb-3">
                <label for="industry" class="form-label">Industry:</label>
                <input type="text" class="form-control" id="industry" name="industry">
            </div>

            <div class="mb-3">
                <label for="employerid" class="form-label">Employer ID Number:</label>
                <input type="text" class="form-control" id="employerid" name="employeridnumber">
            </div>
            <div class="mb-3">
                <label for="aadharno" class="form-label">Aadhar Number:</label>
                <input type="text" class="form-control" id="aadharno" name="aadharnumber">
            </div>
            <div class="mb-3">
                <label for="aadharno" class="form-label">Upload Your Profile Photo:</label>
                <input type="file" class="form-control" id="photo" name="photo">
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Send request to admin</button>
        </form>
        
        <p class="mt-3">Already have an account? <a href="/employerlogin/employerloginhandler">Login here</a>.</p>
        <p><%= message%></p>
    </div>
    
    <!-- Bootstrap JS (optional, if needed) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <!-- Your custom scripts (if any) -->
</body>
</html>
