<!-- header.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Applications</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Styles -->
    <style>
        /* Your custom styles go here */
        header {
    background-color: #ff8300;
    padding: 10px;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

nav {
    display: flex;
    justify-content: flex-start;
    
    padding: 10px;
}

nav a {
    color: white;
    text-decoration: none;
    padding: 10px 20px;
}

.logout-btn,
        .about-btn {
            background-color: #ff8300;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .logout-btn:hover,
        .about-btn:hover {
            background-color: #e23c00;
        }

        .about-btn {
            margin-right: 20px;
        }

        .logout-btn,
        .about-btn {
            width: auto;
            margin: 0 10px;
        }

        .button-container {
            display: flex;
            align-items: center;
        }
        .applied {
            background-color: rgb(170, 215, 245);
        }

        .approved {
            background-color: #d9f4cd;
        }
    </style>
</head>
<body>
<!-- Inside your myapplications.ejs file -->
<header class="text-white back">
    <div>
        <nav>
            <a class="about-btn" href="/about">About</a>
        </nav>
    </div>
    <div class="button-container">
        <div>Welcome, <%=user%></div>
        <a class="logout-btn" href="/logout">Logout</a>
    </div>
</header>



<div class="container mt-4">
    <h1 class="mb-4">My Applications</h1>

    <% applications.forEach(application => { %>
        <div class="card mb-3 <%= application.status === 'approved' ? 'approved' : 'applied' %>">
            <div class="row g-0">
                <!-- <%if (application.logo?.data){%>
                    <div class="col-md-2" >
                     
                        <img src="data:image/jpeg;base64,<%= application.logo.data.toString('base64') %>" alt="Company Logo" class="card-img-top"/>
                    </div>
                    <% } %> -->
                <div class="col-md-10">
                    <div class="card-body">
                        <h5 class="card-title"><%= application.jobname %> at <%= application.companyname %></h5>
                        <p class="card-text">Category: <%= application.category %></p>
                        <p class="card-text">Status: <%= application.status %></p>
                        <!-- Add more details as needed -->

                        <% if (application.status === 'approved') { %>
                            <p class="card-text text-success">Approved</p>
                        <% } else { %>
                            <p class="card-text text-primary">Applied</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>

    <% if (applications.length === 0) { %>
        <p class="lead">You have no applications yet.</p>
    <% } %>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

